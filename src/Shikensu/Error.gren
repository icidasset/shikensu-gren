{-|-}
type Error
    = ErrorMessage String
    | PlatformError Path FileSystem.Error



-- ðŸ› ï¸


{-|-}
toString : Error -> String
toString error =
    case error of
        ErrorMessage message ->
            message

        PlatformError path err ->
            FileSystem.errorToString err
